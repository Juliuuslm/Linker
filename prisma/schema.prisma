generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortenedUrl {
  id          String   @id @default(cuid())
  alias       String   @unique
  originalUrl String

  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  clickCount  Int      @default(0)
  lastClickAt DateTime?

  isActive    Boolean  @default(true)

  @@index([alias])
  @@index([createdAt])
  @@index([isActive, createdAt])
  @@map("shortened_urls")
}
